@model IEnumerable<GerenciamentoAniversarios.Models.Pessoa>

<p>@Html.ActionLink("Voltar", "Index", "Home")</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aniversario)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    
    @Html.HiddenFor(model => item.PessoaId)
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sobrenome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aniversario)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditarPessoa", new { id=item.PessoaId }) |           
            @Html.ActionLink("Excluir", "ExcluirPessoa", new { id=item.PessoaId })
        </td>
    </tr>
}

</table>
